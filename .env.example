# Project settings
COMPOSE_PROJECT_NAME=luxos
ENVIRONMENT=development

# PHP settings
PHP_VERSION=8.3
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=30
PHP_UPLOAD_MAX_FILESIZE=10M
PHP_POST_MAX_SIZE=10M

# Database settings
DB_TYPE=postgres
DB_VERSION=16
DB_USER=appuser
DB_PASSWORD=your_secure_password
DB_NAME=appdb
DB_HOST=postgres
DB_PORT=5432

# Redis settings
REDIS_VERSION=7.2
REDIS_PASSWORD=your_secure_redis_password
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring settings
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Security settings
APP_KEY=your_secure_app_key
JWT_SECRET=your_secure_jwt_secret

# Mail settings
MAIL_DRIVER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Cache settings
CACHE_DRIVER=redis
SESSION_DRIVER=redis

# Queue settings
QUEUE_CONNECTION=redis

# Storage settings
STORAGE_DRIVER=local

# Logging settings
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Feature flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_API=true
ENABLE_WEBHOOKS=false

# API settings
API_DEBUG=true
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# Monitoring settings
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_LOGGING=true 